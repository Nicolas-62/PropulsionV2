{% block _Category_media_delete_widget %}
    {# ... #}
    <div class="entity-detail-media-card mb-3">
        <div class="text-center">
            <img src="{{ asset(getThumbnailPath(ea.entity.fields.getByProperty(form.vars.name).value.media)) }}" class="entity-detail-media-thumbnail">
            <div>
                <div class="btn-group mt-2">
                    <a
                        class="btn btn-block btn-danger"
                        href="{{
                        ea_url().
                            set('fieldName', 'unlink_media').
                            set('newValue', ea.entity.fields.getByProperty(form.vars.name).value.id)
                        }}"
                    >
                        Supprimer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}