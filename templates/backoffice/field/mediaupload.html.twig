{# admin/field/vich_image.html.twig #}
{% set images = field.formattedValue %}
{% if images is not iterable %}
    {% set images = [images] %}
{% endif %}
{% for image in images %}
    {% if field.value %}
        {% set html_id = 'ea-lightbox-' ~ field.uniqueId ~ '-' ~ loop.index %}
        <a href="#" class="ea-lightbox-thumbnail" data-featherlight="#{{ html_id }}" data-featherlight-close-on-click="anywhere">
            <img src="{{ vich_uploader_asset(entity.instance, field.property ~ 'File', entity.fqcn)|imagine_filter('thumb') }}" alt="{{ entity.name }}" class="img-fluid">
        </a>

        <div id="{{ html_id }}" class="ea-lightbox">
            <img src="{{ vich_uploader_asset(entity.instance, field.property ~ 'File', entity.fqcn)|imagine_filter('medium') }}" alt="{{ entity.name }}">
        </div>
    {% else %}
        <span class="badge badge-secondary">
            Empty
        </span>
    {% endif %}
{% endfor %}
