{# Surcharge vue de la liste des actions globales en vue liste #}
<div class="global-actions">
    {% for action in global_actions %}
        {# Action globale de retour à la liste dont fait partie le parent des enfants de la liste visble.#}
        {% if action.name == "return" %}
            {# Si la liste visible est une liste d'enfants appartenant à un parent. #}
            {%  if parentId is not null %}
                {# Passage de l'id du grand parent pour afficher la liste de ses enfant (dont fait partie le parent actuel) #}
                {{ include(action.templatePath, {
                    action: action,
                    ancestorId: ancestorId,
                    crudControllerName: crudControllerName,
                    keyName: keyName
                }, with_context = false) }}
            {% endif %}
        {% else %}
            {{ include(action.templatePath, { action: action}, with_context = false) }}
        {% endif %}
    {% endfor %}
</div>