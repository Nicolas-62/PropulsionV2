{% extends 'frontoffice/_components/layout.html.twig' %}

{% block body %}
    <!-- IMAGE DU HAUT -->
    <div class="row-header shadow-lg container-fluid" >
        <div class="col-lg-8 col-md-12 p-0 position-relative w-sm-100" style="">
            {% if article.cancelled %}
                <div class="cancelled-overlay">
                    <p class="cancelled-text">ANNULÉ</p>
                </div>
            {% elseif article.reported %}
                <div class="cancelled-overlay">
                    <p class="cancelled-text">REPORTÉ</p>
                </div>
            {% elseif article.full %}
                <div class="full-overlay">
                    <p class="cancelled-text">COMPLET</p>
                </div>
            {% endif %}
            {% set media = article.getMedia(18) %}
            {% set category = article.category %}
            {% do category.getDatas(locale) %}
            {% if media is not null %}
                {% set url = '/assets/images/' ~ media.media %}
                <img src="{{ asset((url)) }}" class="rounded-0 w-100 img-fluid"   alt="...">
            {% else %}
                {% set mediaCategoryAgenda = category_agenda.getMedia(25) %}
                {% if mediaCategoryAgenda is not null %}
                    {% set url = 'assets/images/' ~ mediaCategoryAgenda.media %}
                    <img src="{{ asset((url)) }}" class="d-block w-100" alt="...">
                {% endif %}
            {% endif %}
        </div>
        <!-- BILLETTERIE AU DESSUS DE L'IMAGE -->
        <div class=" col-lg-4 col-md-12" style="z-index: 600; border-left: #C8C8C8 solid 1px" >
            <div class="col-12 pb-3">
                <div class="row-header text-center h3">
                    <div
                            class="col-3 theme-1"
                            style="background-color:{{ article.category.themeBackColor }};color: {{ article.themeTextColor }};"
                    >
                        {{ category.title | upper }}
                    </div>
                    <div class="col-9 text-uppercase white justify-content-start px-3" style="background-color: black;min-height: 50px; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 22px"><img class="" style="width: 30px; padding-right: 5px;" src="{{ asset(getSiteImagePath('MINI_BILLETTERIE.svg')) }}">{{ article.style }}</div>
                </div>
            </div>
            <div class="card-container" >
                <!-- Titre -->
                <div class="lh-1 pt-3">
                    <p class="fs-2 mb-3 text-center">{% if article.eventName is not empty %}{{ article.eventName }} :{% endif%} {{ article.titleByLanguage }}</p>
                    <p class="fs-3 mt-0 text-center">{{ article.subtitle }}</p>
                </div>
                <!-- Date -->
                <div style="padding-bottom: 20px; padding-top: 20px">
                    <div style="font-size: 30px; font-weight: normal" class="mb-0 text-center">
                        {{ formatCustomDate(article.dateEvent) }}<br>
                        {% if article.datetimeEvent is not empty and article.datetimeEvent is not null %}
                            {{ article.datetimeEvent| date("H:i") }}
                        {% endif %}
                        {% if article.dateOpeningTime is not empty and article.openingTime is not null %}
                            {{ article.dateOpeningTime| date("H:i") }}<br>
                        {% endif %}
                    </div>
                </div>
                <!-- Bouton ajout panier -->
                {% if article.cancelled %}
                    <div class="py-4 fs-3 text-center" style="color: red">
                        Cet évènement est annulé.
                    </div>

                    {% if article.cancelledOrReportedDescription %}
                        <div class="text-center fs-4">
                            {{ article.cancelledOrReportedDescription }}
                        </div>
                    {% endif %}



                    <!-- Lien de remboursement -->
                    {% if article.refund %}`
                        <div class="text-center mb-4">
                            <a class="btn btn-read-card " href="{{ article.refund }}">Lien de remboursement</a>
                        </div>
                    {% endif %}

                {% elseif article.reported %}
                    <div class="py-4 fs-3 text-center" style="">
                        Cet évènement est reporté.
                    </div>
                    {% if article.cancelledOrReportedDescription %}
                        <div class="text-center fs-4">
                            {{ article.cancelledOrReportedDescription }}
                        </div>
                    {% endif %}
                {% elseif article.full %}
                    <div class="py-4 fs-3 text-center" style="color: red">
                        Cet évènement est plein.
                    </div>
                {% elseif article.dateEvent >  date_yesterday %}
                    <div class="pt-2 pb-5">
                    <div class="row  h3">
                        <div class="col fs-5">
                            {% if article.price is not empty and article.price is not null %}
                                <ul>
                                    <li>
                                        Tarif normal : {{ article.price }}
                                    </li>
                                    {% if article.subscriberPrice %}
                                        <li>
                                            Tarif abonné : {{ article.subscriberPrice }}
                                        </li>
                                    {% endif %}
                                    {%  if article.reducedPrice %}
                                        <li>
                                            Tarif réduit : {{ article.reducedPrice }}
                                        </li>
                                    {% endif %}
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                    {% if article.ticketingLink %}
                        <div class="col text-center">
                            <a href="{{ article.ticketingLink }}" class="btn-read-card">Lien Billetterie</a>
                        </div>
                    {% endif %}
                </div>
                {% else %}
                    <div class="pt-2 pb-5 fs-4">

                        Cet évènement est maintenant terminé.

                    </div>

                {% endif %}
