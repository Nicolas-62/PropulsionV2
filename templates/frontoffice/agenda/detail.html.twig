                        </div>
                        <div class="col-lg-2 col-md-4 d-flex justify-content-end">
                            <h1 style="font-size: 60px">{{ child.heureEvent }}</h1>
                        </div>
                    </div>

                    <!-- DESCRIPTION ARTISTE -->
                    <div class="h2 lh-lg">
                        {{ child.description | raw }}
                    </div>


                    <!-- Image Artiste -->
                    {% set media3 = child.getMedia(1) %}
                    {% if media3 is not null %}
                        {% set url = '/assets/images/' ~ media3.media  %}
                        <img src="{{ asset((url)) }}" class="card-img-top rounded-0" alt="...">
                    {% endif %}

                    <!-- CONTENT ARTISTE -->

                    <div class="h2 lh-lg">
                        {{ child.content | raw }}
                    </div>
                    <!-- VIDEO ARTISTE -->
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item w-100" style="height: 860px" src="{{ child.youtubeLink }}" allowfullscreen></iframe>
                    </div>

                    <!-- PLUS D'INFOS SUR L'ARTISTE -->
                    <div class="row">
                        <div class="col-lg-6 offset-lg-6 col-md-12 py-5">
                            <div class="row">
                                <div class="col-lg-6 col-md-12 d-flex align-items-end">
                                    <h2>Plus d'infos sur l'artiste</h2>

                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <!-- MEDIAS SOCIAUX -->
                                    <div class="row">
                                        {% if child.instagramLink != '' %}
                                            <div class="col-3">
                                                <a href="{{ child.instagramLink }}"><img src="{{ asset('build/maquette/images/INSTA_PROGRAMMATION.svg') }}"></a>
                                            </div>
                                        {% endif %}
                                        {% if child.twitterLink != '' %}
                                            <div class="col-3">
                                                <a href="{{ child.twitterLink }}"><img src="{{ asset('build/maquette/images/TWITTER_PROGRAMMATION.svg') }}"></a>
                                            </div>
                                        {% endif %}
                                        {% if child.facebookLink != '' %}
                                            <div class="col-3">
                                                <a href="{{ child.facebookLink }}"><img src="{{ asset('build/maquette/images/FACEBOOK_PROGRAMMATION.svg') }}"></a>
                                            </div>
                                        {% endif %}
                                        {% if child.siteInternet != '' %}
                                            <div class="col-3">
                                                <a href="{{ child.siteInternet }}"><img src="{{ asset('build/maquette/images/INTERNET_PROGRAMMATION.svg') }}"></a>
                                            </div>
                                        {% endif %}

                                    </div>

                                </div>
                            </div>


                        </div>

                    </div>
                </div>
                <div class="col-lg-4 col-md-12 d-flex align-content-end justify-content-center text-md-center text-lg-start flex-wrap">

                    <div class="p-5">
                        <div class="py-5" style="width: 500px">

                            <img src="{{ asset('build/maquette/images/INFOS_PRATIQUES.svg') }}">
                        </div>



                    </div>

                </div>


            </div>
        </div>

    </div>
    {% endfor %}
