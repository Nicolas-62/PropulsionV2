{% extends 'frontoffice/_components/layout.html.twig' %}
{% block body %}
    <div class="px-lg-5 container-fluid">
        <div class="row font-primary">
            <div class="px-lg-5 px-md-5 pt-5 row">
                <h1 class="col-lg-2 px-lg-1 col-md-6 col-sm-12 fs-1 blue-title text-center text-lg-start mb-3 mb-lg-0"  style="padding-bottom: 10px">{{ page_title | upper }}</h1>
                <div class="custom-select col-lg-2 col-md-6 col-sm-12 d-flex align-items-end bottom-17">
                    <div class="dropdown mx-auto">
                        <button class="btn btn-secondary dropdown-toggle dropdown-toggle-select text-uppercase dropdown-select-button dropdown-select text-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Tous les évènements
                        </button>
                        <ul class="dropdown-menu">
                            <div class="dropdown-select-item-li dropdown-select-item text-uppercase w-100 fs-5">Tous les évènements</div>
                            {% for categorie_child_agenda in categories_child_agenda %}
                                <div class="dropdown-select-item-li dropdown-select-item w-100 fs-5">{{ categorie_child_agenda.title | upper }}</div>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="col-12 col-lg-3  offset-lg-3 h1 text-center text-lg-start mb-4"> <a class="btn-read-card" href="{{ path('fo_agenda_historic')}}">HISTORIQUE  ></a></div>
            </div>
            {% for event in events_agenda %}

                {% if event.dateEvent >  date_yesterday %}
                    {% set media = event.getMedia(1) %}
                    {% set CategoryTitle = event.category.title|replace({' ': '-'})|lower %}
                    <div class="custom-col-xxl-3 col-lg-4 col-md-12 py-3 pb-lg-5 px-lg-3 px-md-0 category-{{ CategoryTitle }} category-tous-les-evenements">
                        <!-- Card-Actu -->
                        {% include 'frontoffice/_components/card.html.twig' with {'event': event, 'agenda': true, 'showButton': false, 'actu': false, 'billetterie': true, 'soutiens': false, 'actions': false } %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}