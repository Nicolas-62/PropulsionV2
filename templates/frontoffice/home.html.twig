{# frontoffice/home.html.twig #}
{% extends 'frontoffice/_components/layout.html.twig' %}
{% block title %}{{ seo.title }}{% endblock %}
{% block body %}
    <!-- Image Vedette LG -->
    {% for event in events_agenda %}
        {% if event.star == 1  %}
            <div class="container-fluid px-0">
                <div class="row">
                    <div class="col-12 px-0 mx-0">
                        <div class="position-relative">
                            {% set media = event.getMedia(9) %}
                            {% if media is not null %}
                                {% set url = '/assets/images/' ~ media.media %}
                                <img src="{{ asset((url)) }}" class="w-100 object-fit-cover" alt="...">
                            {% else  %}
                                <img src="{{ asset(('build/front/images/PLACEHOLDER_CARD_HEADER.png')) }}" class="w-100 object-fit-cover" alt="...">
                            {% endif %}

                            <div class="position-absolute d-none d-lg-block card-vedette-home" >
                                <div class="row mx-0">
                                    <div
                                            class="col-5 white theme-1 text-uppercase bg-black"
                                    >
                                        {{ event.category.title }}
                                    </div>
                                    {% if event.style is not empty and event.style is not null %}
                                        {{ event.category.getDatas(locale) }}
                                        <div class="col-7 theme-2" style="background-color: {{ event.category.themeBackColor }}" >
                                            <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}" alt="">{{ event.style }}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="p-4">
                                    <!-- Titre -->
                                        <div class="my-3 fs-3 mb-0 lh-1">
                                            {{ event.title }}
                                        </div>
                                    <!-- CONTENU -->
                                        <div class="fs-5 card-text">
                                            {{ event.subtitle }}
                                        </div>
                                </div>
                                <div class="p-4 d-flex justify-content-between">
                                    <div class="pb-3 d-flex">
                                        <div class= "fs-3 ">
                                            {{ formatCustomDateWithoutYears(event.dateEvent) }}
                                        </div>
                                        {% if event.dateTimeEvent is not null and event.dateTimeEvent is not empty %}
                                            <div class="fs-5">{{ event.dateTimeEvent| date("H:i") }}</div>
                                        {% endif %}
                                    </div>
                                    <a href="https://billetterie.lalune.net/">
                                        <img class="btn-billetterie-card" src="{{ asset(('build/front/images/LIEN_BILLETTERIE.jpg')) }}" alt="...">
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Artiste Vedette MD/SM -->
            <div class="d-sm-block d-md-block d-lg-none  ">
                <!-- Themes -->
                <div class="row">
                    <div
                            class="col-5 theme-1 text-uppercase"
                            style="background-color: {{ event.themeBackColor }};color: {{ event.themeTextColor }};"

                    >
                        {{ event.category.title }}
                    </div>
                    <div class="col-7 theme-2  justify-content-start" style="background-color: {{ event.styleBackColor }};color: {{ event.styleTextColor }};"
                    >
                        <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.style }}
                    </div>
                </div>

                <div class="card-container lh-1">
                    <div class="py-3">
                        <!-- ARTISTES -->
                        <div class="fs-2 text-uppercase fw-bold">{{ event.title }}</div>
                        <div class="fs-4 text-uppercase">{{ event.subtitle }}</div>
                    </div>
                    <!-- DATE CONCERT ET HEURE -->
                    <div class="row pt-4">
                        <div class="col-9 lh-1">
                            <div class="card-date">{{ formatCustomDate(event.dateEvent) }}</div>
                            {% if event.datetimeEvent is not null and event.datetimeEvent is not empty %}
                                <div class="card-hour">{{ event.datetimeEvent| date("H:i") }}</div>
                            {% endif %}
                        </div>
                        <div class="col-2 offset-1">
                            {% if event.ticketingLink is not empty and event.ticketingLink is not null %}
                                <a href="{{ event.ticketingLink }}">
                                    <img class="btn-billetterie-card" src="{{ asset(('build/front/images/LIEN_BILLETTERIE.jpg')) }}" alt="...">
                                </a>
                            {% else %}
                                <a href="https://billetterie.lalune.net/">
                                    <img class="btn-billetterie-card" src="{{ asset(('build/front/images/LIEN_BILLETTERIE.jpg')) }}" alt="...">
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}

    <!-- Programmation à venir -->
    <div class="p-lg-5">
        <div class="row">
            <div class="d-none d-lg-block d-xl-block px-lg-5">
                <div class="pb-5 h2">Programmation <strong>à venir</strong></div>
            </div>
            {% for event in events_agenda %}

                {% if loop.index0 < 3 %}
                    {% set media = event.getMedia(1) %}
                    {% set CategoryTitle = event.category.title|replace({' ': '-'})|lower %}
                    <div class="col-lg-4 col-md-12 pb-lg-5 px-lg-2 px-md-0 category-{{ CategoryTitle }} category-tous-les-evenements">
                        <!-- Card-Actu -->
                        {% include 'frontoffice/_components/card.html.twig' with {'event': event, 'agenda': true, 'showButton': false, 'actu': false, 'billetterie': true, 'soutiens': false } %}

                    </div>                {% endif %}
            {% endfor %}
        </div>
    </div>


    <!-- Event / Playlistes -->
    <div class="px-lg-5 py-5">


        <div class="row">

            <!-- Event -->
            <div class="col-md-12 col-lg-8">
                <div class="py-5 px-md-3 px-lg-5 ">

                    <h1 class="d-sm-block d-md-block d-lg-none">ÉVÈNEMENTS/ACTUALITÉS</h1>
                    <div class="row"  data-masonry='{"percentPosition": true }'>
                        {% for event in events_actus %}
                            {% if loop.index0 < 4 %}
                                <div class="col-lg-6 col-md-12 border-event mb-md-3 mb-lg-0 mb-sm-3 px-0">
                                    {% if loop.index0 == 3  %}
                                        <img class="img-fluid w-100" src="{{ asset(('build/maquette/images/ACTIONCULTURELLE.png')) }}">
                                    {% endif %}
                                    <div class="p-4">
                                        <!-- TITRE -->
                                        <div class="h3 mb-3">{{ event.title }}</div>
                                        <!-- CONTENU -->
                                        <div class="fs-5">{{ event.description | raw}}</div>
                                        <!-- DATE ET HEURE -->
                                        <div class="pt-3" >
                                            <div class="fs-4 fw-bold">{{ formatCustomDate(event.dateEvent) }}</div>
                                            {% if event.datetimeEvent is not null and event.datetimeEvent is not empty %}
                                                <div class="fs-4">{{ event.datetimeEvent| date("H:i") }}</div>
                                            {% endif %}
                                        </div>
                                        <a href="{{ path('fo_actus_detail', { 'slug': event.slug }) }}" class="btn border rounded-0 border-dark mt-3">LIRE LA SUITE</a>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Playlists -->
            <div class="col-md-12 col-lg-4 text-center text-lg-start">
                <div class="row py-5">
                    <div class="col-12 pb-3">
                        <a href="http://www.lalune.net/concert-amiens/bruits-de-lune/">
                            <img class="img-bruits-lune" src="{{ asset('build/maquette/images/BRUITS_LUNE.png') }}">
                        </a>
                    </div>
                    <div class="col-12 py-3">
                        <a href="https://open.spotify.com/user/lalunedespirates">
                            <img class="img-lune-spotify" src="{{ asset('build/maquette/images/LUNE_SPOTIFY.svg') }}">
                        </a>
                        <div class="fs-5">

                            Concerts Gratuits Abonnés & Réductions
                        </div>
                        <div class="fs-5 fw-bold">
                            Abonnez-vous !
                        </div>
                    </div>
                    <div class="col-12 py-3">
                        <div class="h2"> Playlist</div>
                        <a href="https://open.spotify.com/user/lalunedespirates">
                            <img class="img-spotify" src="{{ asset('build/maquette/images/SPOTIFY.svg') }}">
                        </a>
                        <div class="fs-5">
                            <b>Abonnez-vous</b> à notre playlist
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

