{# frontoffice/home.html.twig #}
{% extends 'frontoffice/_components/layout.html.twig' %}

{% block body %}
    <!-- Image Vedette LG -->
    {% for event in events_agenda %}
        {% if loop.index0 == 4  %}
            <div class="container-fluid px-0">
                <div class="row">
                    <div class="col-12 px-0 mx-0">
                        <div style="position: relative">
                            <img class="w-100" src="{{ asset('build/maquette/images/GISCARD.svg') }}">
                            <div class="position-absolute d-none d-lg-block" style="right: 0; top:25%; width: 25%; background-color: white">
                                <div class="row mx-0">
                                    <div
                                            class="col-5 white theme-1 text-uppercase"
                                            style="background-color: {{ event.themeBackColor }};color: {{ event.themeTextColor }};"
                                    >
                                        {{ event.category.title }}
                                    </div>
                                    <div class="col-7 theme-2" style="background-color: {{ event.styleBackColor }};color: {{ event.styleTextColor }};" >
                                        <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.style }}
                                    </div>
                                </div>
                                <div class="card-body card-container" style="line-height: 1.1">
                                    <div class="py-3">
                                        <div class="card-title text-uppercase"><b>{{ event.title }}</b></div>
                                        <div class="card-subtitle text-uppercase">{{ event.subtitle }}</div>
                                    </div>
                                    <div class="row pt-4">
                                        <div class="col-8" style="line-height: 1">
                                            <div class="card-date"><b>{{ event.dateEvent }}</b></div>
                                            <div class="card-hour">{{ event.heureEvent }}</div>
                                        </div>
                                        <div class="col-4 d-flex align-items-end">
                                            <img class="img-fluid" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Artiste Vedette MD/SM -->
            <div class="d-sm-block d-md-block d-lg-none  ">
                <!-- Themes -->
                <div class="row">
                    <div
                            class="col-3 theme-1 text-uppercase"
                            style="background-color: {{ event.themeBackColor }};color: {{ event.themeTextColor }};"

                    >
                        {{ event.category.title }}
                    </div>
                    <div class="col-9 theme-2  justify-content-start" style="background-color: {{ event.styleBackColor }};color: {{ event.styleTextColor }};"
                    >
                        <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.style }}
                    </div>
                </div>

                <div class="card-container" style="line-height: 1.1">
                    <div class="py-3">
                        <!-- ARTISTES -->
                        <div class="card-title text-uppercase">{{ event.title }}</div>
                        <div class="card-subtitle text-uppercase">{{ event.subtitle }}</div>
                    </div>
                    <!-- DATE CONCERT ET HEURE -->
                    <div class="row pt-4">
                        <div class="col-9" style="line-height: 1">
                            <div class="card-date">{{ event.dateEvent }}</div>
                            <div class="card-hour">{{ event.heureEvent }}</div>
                        </div>
                        <div class="col-2 offset-1">
                            <a href="https://billetterie.lalune.net/">
                                <img class="img-fluid" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}

    <!-- Programmation à venir -->
    <div class="p-lg-5">
        <div class="row">
            <div class="d-none d-lg-block d-xl-block">
                <h1 class="pb-5">Programmation <b>à venir</b></h1>
            </div>
            {% for event in events_agenda %}

                {% if loop.index0 < 3 %}
                    <div class="col-lg-4 col-md-12 px-0">
                        <!-- Card-Actu -->
                        <div class="card mb-3  mx-lg-3 shadow-lg rounded-0 h-100 prog">

                            <div class="overlay" style="">
                            </div>

                            {% set media = event.getMedia(1) %}
                            {% if media is not null %}
                            {% set url = '/assets/images/' ~ media.media %}
                                <img src="{{ asset((url)) }}" class="card-img-top rounded-0" alt="...">
                            {% else  %}
                                <img src="{{ asset(('build/front/images/PLACEHOLDER_CARD.png')) }}" class="card-img-top rounded-0" alt="...">
                            {% endif %}
                            <!-- Themes -->
                            <div class="row mx-0 px-0">
                                <div
                                        class="col-3 theme-1 text-uppercase"
                                        style="background-color: {{ event.themeBackColor }};color: {{ event.themeTextColor }};"

                                >
                                    {{ event.category.title }}
                                </div>
                                <div class="col-9 white theme-2 justify-content-start"  style="background-color: {{ event.styleBackColor }};color: {{ event.styleTextColor }};">
                                    <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.style }}
                                </div>
                            </div>
                            <div class="card-container" style="line-height: 1.1">
                                <div class="py-3">
                                    <!-- ARTISTES -->
                                    <div class="card-title text-uppercase">{{ event.title }}</div>
                                    <div class="card-subtitle text-uppercase">{{ event.subtitle }}</div>
                                </div>
                                <!-- DATE CONCERT ET HEURE -->
                                <div class="row pt-4">
                                    <div class="col-9" style="line-height: 1">
                                        <div class="card-date">{{ event.dateEvent }}</div>
                                        <div class="card-hour">{{ event.heureEvent }}</div>
                                    </div>
                                    <div class="col-2 offset-1">
                                        <a href="https://billetterie.lalune.net/">
                                            <img class="img-fluid" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>


    <!-- Event / Playlistes -->
    <div class="px-5 py-5">


        <div class="row">

            <!-- Event -->
            <div class="col-md-12 col-lg-8">
                <div class="py-5 px-5">

                    <h1 class="d-sm-block d-md-block d-lg-none">ÉVÈNEMENTS/ACTUALITÉS</h1>
                    <div class="row">
                        {% for event in events_actus %}
                            <div class="col-lg-6 col-md-12 border mb-md-3 mb-lg-0 mb-sm-3 px-0">
                                {% if loop.index0 == 3  %}
                                    <img class="img-fluid w-100" src="{{ asset(('build/maquette/images/ACTIONCULTURELLE.png')) }}">
                                {% endif %}
                                <div class="py-5 px-5">
                                    <!-- TITRE -->
                                    <h2 class="mb-4">{{ event.title }}</h2>
                                    <!-- CONTENU -->
                                    <div class="fs-3">{{ event.description | raw}}</div>
                                    <!-- DATE ET HEURE -->
                                    <div style="line-height: 1">
                                        <div class="date">{{ event.dateEvent }}</div>
                                        <div class="hour">{{ event.heureEvent }}</div>
                                    </div>
                                    <a href="{{ path('fo_actus_detail', { 'title': event.title, 'category_id': event.category.id }) }}" class="btn border rounded-0 border-dark mt-5">LIRE LA SUITE</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Playlists -->
            <div class="col-md-12 col-lg-4">
                <div class="px-5 py-5">
                    <div class="row">
                        <div class="col-12 py-3">
                            <a href="http://www.lalune.net/concert-amiens/bruits-de-lune/">
                                <img class="w-100" src="{{ asset('build/maquette/images/BRUITS_LUNE.png') }}">
                            </a>
                        </div>
                        <div class="col-12 py-3">
                            <a href="https://open.spotify.com/user/lalunedespirates">
                                <img class="w-100" src="{{ asset('build/maquette/images/LUNE_SPOTIFY.svg') }}">
                            </a>
                        </div>
                        <div class="col-12 py-3">
                            <p class="h1"> Playlist</p>
                            <a href="https://open.spotify.com/user/lalunedespirates">
                                <img class="w-100" src="{{ asset('build/maquette/images/SPOTIFY.svg') }}">
                            </a>
                            <p class="h2">
                                Abonnez-vous à notre playlist
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TEST CAROUSEL -->
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="p-5">
                    <div class="card mb-3  mx-lg-3 shadow-lg rounded-0 h-100 ">

                        <img src="{{ asset(('build/maquette/images/SILLYBOYBLUE.png')) }}" class="card-img-top rounded-0" alt="...">
                        <div class=" ">
                            <!-- Themes -->
                            <div class="row mx-0 px-0">
                                <div class="col-3 white"  style="background-color: #fa5faa; min-height: 50px; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 22px">
                                    CONCERT
                                </div>
                                <div class="col-9 white justify-content-start"  style="background-color: black; min-height: 50px; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 22px">
                                    <img class="" style="width: 30px; padding-right: 5px;" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">SHLAG WAVE SOMBRE | INDIE POST-PUNK
                                </div>
                            </div>

                            <div class="card-container">
                                <!-- ARTISTE -->

                                <h5 class="card-title my-3" style="font-size: 34px; font-weight: bold">GWENDOLINE</h5>

                                <!-- seconde partie -->
                                <p class="card-text">

                                </p>


                                <div class="row">
                                    <!-- DATE CONCERT ET HEURE -->
                                    <div class="col-9 d-flex align-content-end">

                                        <div class="d-flex align-items-end" style="min-height: 250px">
                                            <div>
                                                <p style="font-size: 29px;font-weight: bold">MER. 17 MAI 2023</p>
                                                <div class="d-inline-flex ">

                                                    <p style="font-size: 31px;font-weight: bold">20:30</p>
                                                    <a href="https://billetterie.lalune.net/">
                                                        <img src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}" class="card-img-top rounded-0" alt="...">
                                                    </a>
                                                </div>

                                            </div>
                                        </div>

                                    </div>

                                    <!-- Potentiel lien Billetterie -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('build/maquette/images/GWENDOLINE.png') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('build/maquette/images/KULTUR.png') }}" class="d-block w-100" alt="...">

            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

{% endblock %}