{# frontoffice/home.html.twig #}
{% extends 'frontoffice/_components/layout.html.twig' %}

{% block body %}
    <!-- Image Vedette LG -->
    {% for event in events_agenda %}
        {% if loop.index0 == 4  %}
            <div class="container-fluid px-0" style="">
                <div class="row">
                    <div class="col-12 px-0 mx-0">
                        <div style="position: relative">
                            <img class="w-100" src="{{ asset('build/maquette/images/GISCARD.svg') }}" style="object-fit: cover;max-height: 50vh" alt="...">
                            <div class="position-absolute d-none d-lg-block" style="right: 0; top:25%; width: 25%; background-color: white">
                                <div class="row mx-0">
                                    <div
                                            class="col-5 white theme-1 text-uppercase"
                                            style="background-color: {{ event.themeBackColor }};color: {{ event.themeTextColor }};"
                                    >
                                        {{ event.category.title }}
                                    </div>
                                    <div class="col-7 theme-2" style="background-color: {{ event.styleBackColor }};color: {{ event.styleTextColor }};" >
                                        <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}" alt="">{{ event.style }}
                                    </div>
                                </div>
                                <div class="card-body card-container" style="line-height: 1.1">
                                    <div class="py-3">
                                        <div class="card-title text-uppercase"><b>{{ event.title }}</b></div>
                                        <div class="card-subtitle text-uppercase">{{ event.subtitle }}</div>
                                    </div>
                                    <div class="row pt-4">
                                        <div class="col-8" style="line-height: 1">
                                            <div class="card-date"><b>{{ formatCustomDate(event.dateEvent) }}</b></div>
                                            <div class="card-hour">{{ event.heureEvent| date("H:i") }}</div>
                                        </div>
                                        <div class="col-4 d-flex align-items-end">
                                            <img class="img-fluid" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Artiste Vedette MD/SM -->
            <div class="d-sm-block d-md-block d-lg-none  ">
                <!-- Themes -->
                <div class="row">
                    <div
                            class="col-3 theme-1 text-uppercase"
                            style="background-color: {{ event.themeBackColor }};color: {{ event.themeTextColor }};"

                    >
                        {{ event.category.title }}
                    </div>
                    <div class="col-9 theme-2  justify-content-start" style="background-color: {{ event.styleBackColor }};color: {{ event.styleTextColor }};"
                    >
                        <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.style }}
                    </div>
                </div>

                <div class="card-container" style="line-height: 1.1">
                    <div class="py-3">
                        <!-- ARTISTES -->
                        <div class="card-title text-uppercase">{{ event.title }}</div>
                        <div class="card-subtitle text-uppercase">{{ event.subtitle }}</div>
                    </div>
                    <!-- DATE CONCERT ET HEURE -->
                    <div class="row pt-4">
                        <div class="col-9" style="line-height: 1">
                            <div class="card-date">{{ event.dateEvent| date("d/m/Y") }}</div>
                            <div class="card-hour">{{ event.heureEvent| date("H:i") }}</div>
                        </div>
                        <div class="col-2 offset-1">
                            <a href="https://billetterie.lalune.net/">
                                <img class="img-fluid" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}

    <!-- Programmation à venir -->
    <div class="p-lg-5">
        <div class="row">
            <div class="d-none d-lg-block d-xl-block px-lg-5">
                <h1 class="pb-5">Programmation <strong>à venir</strong></h1>
            </div>
            {% for event in events_agenda %}

                {% if loop.index0 < 3 %}
                    {% set media = event.getMedia(1) %}
                    {% set CategoryTitle = event.category.title|replace({' ': '-'})|lower %}
                    <div class="col-lg-4 col-md-12 pb-lg-5 px-lg-3 category-{{ CategoryTitle }} category-tous-les-evenements">
                        <!-- Card-Actu -->
                        <div class="card mb-3 mx-lg-3 shadow-lg rounded-0 h-100" style="max-height: 1100px; display: flex; flex-direction: column;">
                            <div class="prog">
                                <!-- Image -->
                                <a class="text-decoration-none stretched-link" href="{{ path('fo_agenda_detail', { 'slug': event.slug,}) }}">
                                    {% if media is not null %}
                                        {% set url = '/assets/images/' ~ media.media %}
                                        <img src="{{ asset((url)) }}" class="card-img-top rounded-0" style="object-fit: cover; max-height: 35vh;" alt="...">
                                    {% else  %}
                                        <img src="{{ asset(('build/front/images/PLACEHOLDER_CARD_HEADER.png')) }}" class="card-img-top rounded-0" style="object-fit: cover; max-height: 35vh;" alt="...">
                                    {% endif %}
                                </a>
                                <div class="overlay" style="top: 0!important">
                                    <div>
                                        <i data-fa-i2svg=""><svg class="white svg-inline--fa fa-eye fa-1x" aria-hidden="true" focusable="false" data-prefix="far" data-icon="eye" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" data-fa-i2svg=""><path fill="currentColor" d="M288 80c-65.2 0-118.8 29.6-159.9 67.7C89.6 183.5 63 226 49.4 256c13.6 30 40.2 72.5 78.6 108.3C169.2 402.4 222.8 432 288 432s118.8-29.6 159.9-67.7C486.4 328.5 513 286 526.6 256c-13.6-30-40.2-72.5-78.6-108.3C406.8 109.6 353.2 80 288 80zM95.4 112.6C142.5 68.8 207.2 32 288 32s145.5 36.8 192.6 80.6c46.8 43.5 78.1 95.4 93 131.1c3.3 7.9 3.3 16.7 0 24.6c-14.9 35.7-46.2 87.7-93 131.1C433.5 443.2 368.8 480 288 480s-145.5-36.8-192.6-80.6C48.6 356 17.3 304 2.5 268.3c-3.3-7.9-3.3-16.7 0-24.6C17.3 208 48.6 156 95.4 112.6zM288 336c44.2 0 80-35.8 80-80s-35.8-80-80-80c-.7 0-1.3 0-2 0c1.3 5.1 2 10.5 2 16c0 35.3-28.7 64-64 64c-5.5 0-10.9-.7-16-2c0 .7 0 1.3 0 2c0 44.2 35.8 80 80 80zm0-208a128 128 0 1 1 0 256 128 128 0 1 1 0-256z"></path></svg></i>
                                    </div>
                                </div>
                                {% if event.cancelled %}
                                    <div class="cancelled-overlay">
                                        <p class="cancelled-text">ANNULÉ</p>
                                    </div>
                                {% elseif event.reported %}
                                    <div class="cancelled-overlay">
                                        <p class="cancelled-text">REPORTÉ</p>
                                    </div>
                                {% elseif event.full %}
                                    <div class="full-overlay">
                                        <p class="cancelled-text">COMPLET</p>
                                    </div>
                                {% endif %}
                            </div>
                            <!-- Themes -->
                            <div class="row mx-0 px-0">
                                <div class="col-5 theme-1 text-uppercase"  style="background-color: {{ event.themeBackColor }}; color: {{ event.themeTextColor }};">
                                    {{ event.category.title }}
                                </div>
                                {% if event.style is not null and event.style is not empty %}
                                    <div class="col-7 white theme-2 justify-content-start" style="background-color: black; }};">
                                        <img class="" style="width: 30px; padding-right: 5px;" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.style }}
                                    </div>
                                {% endif %}
                            </div>

                            <!-- CARD CONTENT -->
                            <div class="card-container" style="flex: 1;">
                                <!-- Titre -->
                                <h5 class="card-title my-3 fs-3" style="font-size: 25px !important;">
                                    {{ event.title }}
                                </h5>
                                <!-- CONTENU -->
                                <div class="fs-4 card-text">
                                    {{ event.subtitle }}
                                </div>
                            </div>

                            <!-- CARD ACTIONS -->
                            <div class="card-container mb-3 d-flex justify-content-between" style="align-items: flex-end;">
                                <div class="pb-3 d-flex">
                                    <div class="card-date " style="align-self: flex-end;">
                                        {{ formatCustomDate(event.dateEvent) }}
                                    </div>
                                    {% if event.dateTimeEvent is not null and event.dateTimeEvent is not empty %}
                                        <div class="card-hour">{{ event.dateTimeEvent| date("H:i") }}</div>
                                    {% endif %}
                                </div>
                                <a href="https://billetterie.lalune.net/">
                                    <img class="btn-billetterie-card" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}" alt="...">
                                </a>
                            </div>
                        </div>
                    </div>                {% endif %}
            {% endfor %}
        </div>
    </div>


    <!-- Event / Playlistes -->
    <div class="px-5 py-5">


        <div class="row">

            <!-- Event -->
            <div class="col-md-12 col-lg-8">
                <div class="py-5 px-5">

                    <h1 class="d-sm-block d-md-block d-lg-none">ÉVÈNEMENTS/ACTUALITÉS</h1>
                    <div class="row">
                        {% for event in events_actus %}
                            <div class="col-lg-6 col-md-12 border mb-md-3 mb-lg-0 mb-sm-3 px-0">
                                {% if loop.index0 == 3  %}
                                    <img class="img-fluid w-100" src="{{ asset(('build/maquette/images/ACTIONCULTURELLE.png')) }}">
                                {% endif %}
                                <div class="py-5 px-5">
                                    <!-- TITRE -->
                                    <h2 class="mb-4">{{ event.title }}</h2>
                                    <!-- CONTENU -->
                                    <div class="fs-3">{{ event.description | raw}}</div>
                                    <!-- DATE ET HEURE -->
                                    <div style="line-height: 1" >
                                        <div class="date py-3">{{ formatCustomDate(event.dateEvent) }}</div>
                                        <div class="hour">{{ event.heureEvent| date("H:i") }}</div>
                                    </div>
                                    <a href="{{ path('fo_actus_detail', { 'slug': event.slug }) }}" class="btn border rounded-0 border-dark mt-5">LIRE LA SUITE</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Playlists -->
            <div class="col-md-12 col-lg-4">
                <div class="px-5 py-5">
                    <div class="row">
                        <div class="col-12 py-3">
                            <a href="http://www.lalune.net/concert-amiens/bruits-de-lune/">
                                <img class="w-100" src="{{ asset('build/maquette/images/BRUITS_LUNE.png') }}">
                            </a>
                        </div>
                        <div class="col-12 py-3">
                            <a href="https://open.spotify.com/user/lalunedespirates">
                                <img class="w-100" src="{{ asset('build/maquette/images/LUNE_SPOTIFY.svg') }}">
                            </a>
                            <div class="fs-3">

                                Concerts Gratuits Abonnés & Réductions
                            </div>
                            <div class="fs-3">
                                Abonnez-vous !
                            </div>
                        </div>
                        <div class="col-12 py-3">
                            <p class="h1"> Playlist</p>
                            <a href="https://open.spotify.com/user/lalunedespirates">
                                <img class="" style="width: 40%" src="{{ asset('build/maquette/images/SPOTIFY.svg') }}">
                            </a>
                            <p class="h2">
                                Abonnez-vous à notre playlist
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

