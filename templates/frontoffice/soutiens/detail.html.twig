{% extends 'frontoffice/_components/layout.html.twig' %}


{% block body %}

    {{  article.getDatas(locale) }}
    <div class="p-2 p-lg-5">



        <div class="row p-lg-5">

            <div class="col-lg-6 col-md-12">
                <div class="d-block d-lg-none">
                    {% set media = article.getMedia(4) %}
                    {% if media is not null %}
                        {% set url = '/assets/images/' ~ media.media %}
                        <img src="{{ url }}" alt="{{ media.media}}" class="w-100 img-fluid">
                    {% endif %}
                </div>
                <div>
                    <h1 class="text-center mb-2">{{ article.title }}</h1>
                    <h3 class="text-center mb-3">{% if article.typeMusic is not empty and article.typeMusic is not null %}{{ article.typeMusic }} {% endif %}{% if article.origin is not empty and article.origin is not null %}- {{ article.origin }}{% endif %}</h3>
                </div>
                <div class="row text-center">
                    {% if article.instagramLink != '' %}
                        <div class="col">
                            <a href="{{ article.instagramLink }}"><img class="mh-45"  src="{{ asset('build/front/images/PICTURE.svg') }}"></a>
                        </div>
                    {% endif %}
                    {% if article.twitterLink != '' %}
                        <div class="col">
                            <a href="{{ article.twitterLink }}"><img class="mh-45" src="{{ asset('build/front/images/TWITTER.svg') }}"></a>
                        </div>
                    {% endif %}
                    {% if article.facebookLink != '' %}
                        <div class="col">
                            <a href="{{ article.facebookLink }}"><img class="mh-45" src="{{ asset('build/front/images/FACEBOOK.svg') }}"></a>
                        </div>
                    {% endif %}
                    {% if article.siteInternet != '' %}
                        <div class="col">
                            <a href="{{ article.siteInternet }}"><img class="mh-45" src="{{ asset('build/front/images/INTERNET.svg') }}"></a>
                        </div>
                    {% endif %}
                </div>
                <div class="fs-5 mt-4">{{ article.description | raw }}</div>
                <div class="mt-5">

                    <div class="fs-5">{{ article.content | raw }}</div>

                </div>
                <!-- FICHIERS PDF -->
                <div>
                    {% if not article.getFiles is empty %}

                        <div class="mt-5">
                            {% set filesArray = article.getFiles() %}
                            {% set arrayLength = filesArray|length %}
                            {% if arrayLength > 1 %}
                                <h4 class="mb-5">Fichiers liés à l'article : </h4>
                            {% elseif arrayLength == 1 %}
                                <h4 class="mb-5">Fichier lié à l'article : </h4>
                            {% endif %}
                            {% for file in article.getFiles() %}
                                {% set url_file = '/assets/images/' ~ file.media %}
                                    <a class="btn-files fs-5" href="{{ url_file }}" role="button">{{ file.legend }}</a>
                            {% endfor %}
                        </div>
                    {% endif %}

                </div>


            </div>
            <div class="col-lg-6 col-md-12">
                <div class="d-none d-lg-block">
                    {% set media = article.getMedia(4) %}
                    {% if media is not null %}
                        {% set url = '/assets/images/' ~ media.media %}
                        <img src="{{ url }}" alt="{{ media.media}}" class="w-100 img-fluid">
                    {% endif %}
                </div>
                <div class="mt-4">

                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item w-100" style="height: 100%" src="{{ article.youtubeLink }}" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="mt-4">
                </div>
                <div>
                    {% if article.soundcloudLink is not null and article.soundcloudLink is not empty %}
                        <iframe width="100%" height="200" scrolling="no" frameborder="no" allow="autoplay" src="{{ article.soundcloudLink }}"></iframe><div style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"><a href="https://soundcloud.com/nguvulu-ngola" title="Nguvulu Produções" target="_blank" style="color: #cccccc; text-decoration: none;">Nguvulu Produções</a> · <a href="https://soundcloud.com/nguvulu-ngola/cobra-jonaskay-gsforlife-ft-doryzzy-jonaskay" title="cobra - Jonaskay Gsforlife​ ft  Doryzzy Jonaskay 2015" target="_blank" style="color: #cccccc; text-decoration: none;">cobra - Jonaskay Gsforlife​ ft  Doryzzy Jonaskay 2015</a></div>
                    {% endif %}

                    {% if article.soundcloudSecondLink is not null and article.soundcloudSecondLink is not empty %}
                        <iframe width="100%" height="200" scrolling="no" frameborder="no" allow="autoplay" src="{{ article.soundcloudSecondLink }}"></iframe><div style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"><a href="https://soundcloud.com/jonaskayguettostar" title="EYAYA" target="_blank" style="color: #cccccc; text-decoration: none;">EYAYA</a> · <a href="https://soundcloud.com/jonaskayguettostar/jonaskay-atetete" title="Jonaskay - Ateteté" target="_blank" style="color: #cccccc; text-decoration: none;">Jonaskay - Ateteté</a></div>
                    {% endif %}
                    {% if article.soundcloudThirdLink is not null and article.soundcloudThirdLink is not empty %}
                        <iframe width="100%" height="200" scrolling="no" frameborder="no" allow="autoplay" src="{{ article.soundcloudThirdLink }}"></iframe><div style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"><a href="https://soundcloud.com/guettostar" title="Angoboyz" target="_blank" style="color: #cccccc; text-decoration: none;">Angoboyz</a> · <a href="https://soundcloud.com/guettostar/guettostar_cobra" title="GUETTO STAR COBRAS(PROD BY DOCTA BIO)" target="_blank" style="color: #cccccc; text-decoration: none;">GUETTO STAR COBRAS(PROD BY DOCTA BIO)</a></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}