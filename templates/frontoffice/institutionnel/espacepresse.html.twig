{% extends 'frontoffice/_components/layout.html.twig' %}
{% block body %}
<div class="wrapper espacepresse">
    <div class="p-lg-3 container-fluid">
        <div class="row gx-0">
            <div id="page-link-container" class="col-lg-3 col-md-12 p-5 menu text-md-center text-sm-center position-relative">
                <div class="row">
                    <div class="col-lg-12 col-md-12 pt-lg-5">
                        {% for article in articles %}
                            <div class="text-center text-lg-start h3 py-3 menu-item {% if active_entry.id == article.id %}active{% endif %}" data-entry="entry{{ article.id }}">
                                {{ article.title | upper}}
                                <div class="w-100 position-relative" style="">
                                    <div class="triangle2 {% if active_entry.id == article.id %}active{% endif %}" data-entry="entry{{ article.id }}"></div>
                                    <div class="triangle3 {% if active_entry.id == article.id %}active{% endif %}" data-entry="entry{{ article.id }}"></div>
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="d-lg-none">
                <hr>
            </div>
            <div id="page-container"  class="col-lg-9 col-md-12">
                {% for article in articles %}
                    <div id="entry{{ article.id }}" class="py-5 px-lg-5 {% if loop.index > 1 %}hidden{% endif %}" >
                        <div class="row">
                            <div class="col-12 text-center pb-5">
                                {% do article.getDatas(locale) %}
                                <div class="h2">{{ article.title|upper }}</div>
                            </div>
                            <div class="fs-5 mb-5">
                                {{ article.description|raw }}
                            </div>
                            {% set media = article.getMedia(20) %}
                            <div class="row row-cols-6">
                                <div class="col position-relative">
                                    {% if media is not null %}
                                        <img src="{{ url('ressources_image', {'width':'src','height':'src', 'media':media.media} ) }}"  class="card-img-top rounded-0 transport-info object-fit-contain" alt="...">
                                        <a  href="{{ url('ressources_image', {'width':'src','height':'src', 'media':media.media} ) }}" class="logo-download" download><i class="fas fa-download"></i></a>
                                    {% endif  %}
                                </div>
                            </div>
                            <div class="fs-5 mt-5">
                                {{ article.content|raw }}
                            </div>
                            <div>
                                {% set filesArray = article.getFiles %}
                                {% if  filesArray is not empty %}
                                    <div class="mt-5">
                                        <h4 class="mb-5">Fichier{% if filesArray|length > 1 %}s{% endif %} lié{% if filesArray|length > 1 %}s{% endif %} à l'article : </h4>
                                        <div class="d-flex flex-wrap">
                                            {% for file in filesArray %}
                                                {% set url_file = '/assets/images/' ~ file.media %}
                                                    <a class="btn-files fs-5 me-2 mb-2 text-nowrap" href="{{ url_file }}" role="button" target="_blank">{{ file.legend }}</a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
