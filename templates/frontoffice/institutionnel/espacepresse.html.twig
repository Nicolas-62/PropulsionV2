{% extends 'frontoffice/_components/layout.html.twig' %}
{% block body %}
    <style>
        #page-link-container {
            position: relative;
        }

        .menu-container {
            position: relative; /* Assurez-vous que cette div intermédiaire a une position relative */
        }

        .menu-item {
            position: relative;
        }

        @media (min-width: 992px) {
            .triangle3.active {
                position: absolute;
                margin: auto;
                top: -35px;
                right: -65px;
                width: 40px;
                height: 40px;
                transform: rotate(-45deg);
                border-right: 20px solid #FFF;
                border-bottom: 20px solid #FFF;
            }
            #page-link-container {
                border: 3px;border-style: dotted; border-bottom: 0; border-top: 0; border-left:0;
            }
            .triangle2.active {
                position: absolute;
                margin: auto;
                top: -35px;
                right: -69px;
                width: 40px;
                height: 40px;
                transform: rotate(-45deg);
                border-right: 3px dotted #000;
                border-bottom: 3px dotted #000;
            }
        }


    </style>

    <div class="px-4 p-lg-5 ">
        <div class="row">
            <div id="page-link-container" class="col-lg-3 col-md-12 p-5 menu text-md-center text-sm-center position-relative">


                <div class="row">
                    <div class="col-lg-12 col-md-12 pt-lg-5" style="">
                        {% for article in articles %}
                            <div class="text-center text-lg-start h3 py-3 menu-item {% if active_entry == 'entry' ~ loop.index %}active{% endif %}" data-entry="entry{{ loop.index }}">
                                {{ article.title | upper}}
                                <div class="w-100 position-relative" style="">
                                    <div class="triangle2 {% if active_entry == 'entry' ~ loop.index %}active{% endif %}" data-entry="entry{{ loop.index }}"></div>
                                    <div class="triangle3 {% if active_entry == 'entry' ~ loop.index %}active{% endif %}" data-entry="entry{{ loop.index }}"></div>
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="d-lg-none">

                <hr>
            </div>

            <div id="page-container"  class="col-lg-9 col-md-12">
                {% for article in articles %}
                    <div id="entry{{ loop.index }}" class="py-5 px-lg-5 {% if loop.index > 1 %}hidden{% endif %}" >
                        <div class="row">
                            <div class="col-12 text-center pb-5">
                                {% do article.getDatas(locale) %}

                                <div class="h2">{{ article.title|upper }}</div>
                            </div>
                            <div class="fs-5 mb-5">
                                {{ article.description|raw }}


                            </div>
                            {% set media = article.getMedia(20) %}

                            {% if media is not null %}
                                <img src="{{ url('ressources_image', {'width':'src','height':'src', 'media':media.media} ) }}"  class="card-img-top rounded-0 transport-info object-fit-contain" alt="...">
                            {% endif  %}


                            <br>
                            <div class="fs-5 mt-5">
                                {{ article.content|raw }}
                            </div>
                            <div>
                                {% if not article.getFiles is empty %}

                                    <div class="mt-5">
                                        {% set filesArray = article.getFiles() %}
                                        {% set arrayLength = filesArray|length %}
                                        {% if arrayLength > 1 %}
                                            <h4 class="mb-5">Fichiers liés à l'article : </h4>
                                        {% elseif arrayLength == 1 %}
                                            <h4 class="mb-5">Fichier lié à l'article : </h4>
                                        {% endif %}
                                        {% for file in article.getFiles() %}
                                            {% set url_file = '/assets/images/' ~ file.media %}
                                            <a class="btn-files fs-5" href="{{ url_file }}" role="button">{{ file.legend }}</a>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>




{% endblock %}
