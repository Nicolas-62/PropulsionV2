{% extends 'frontoffice/_components/layout.html.twig' %}
{% block body %}
    <div class="px-lg-4 ">
        <div class="row">
            <div  id="page-link-container" class="col-lg-3 col-md-12 p-5 menu text-md-center text-sm-center">
                <div class="row">
                    <div class="col-lg-10 col-md-12 pt-lg-5">
                        {% for article in articles %}
                            <div class="text-center text-lg-start h3 py-3 menu-item {% if active_entry == 'entry' ~ loop.index %}active{% endif %}" data-entry="entry{{ loop.index }}">
                                {{ article.title | upper}}
                            </div>
                            <div id="blue-dot{{ loop.index0 }}" class="blue-dot"></div>
                        {% endfor %}
                    </div>
                    <div class="col-2 d-sm-none d-md-none d-lg-block">
                        <img src="{{ asset(('build/maquette/images/SOUTIENS_MENU.png')) }}" class="d-none d-lg-block">
                    </div>
                </div>
            </div>

            <div class="d-lg-none">

                <hr>
            </div>
            <div id="page-container"  class="col-lg-9 col-md-12">
                {% for article in articles %}
                <div id="entry{{ loop.index }}" class="py-5 px-lg-5 {% if loop.index > 1 %}hidden{% endif %}" >
                    <div class="row">
                        <div class="col-12 text-center pb-5">
                            {% do article.getDatas(locale) %}

                            <div class="h2">{{ article.title|upper }}</div>
                        </div>
                        <div class="fs-5 p-lg-5">
                            {{ article.content|raw }}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
