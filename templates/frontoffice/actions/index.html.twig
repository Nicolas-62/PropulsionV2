{% extends 'frontoffice/_components/layout.html.twig' %}

{% block body %}
    <div class="p-5">
        <!-- ARTICLE -->
        <div class="p-5 h2">
            <!-- IMAGE ARTICLE -->
            <img src="{{ asset(('build/maquette/images/ACTIONCULTURELLE.png')) }}" class="w-100 mb-5 img-fluid" style="max-height: 600px; object-fit: cover" alt="ACTIONCULTURELLE">
            <div class="pt-4 position-relative">
                <img src="{{ asset(('build/maquette/images/actu_cadre_1.svg')) }}" class="position-absolute" style="max-height: 100px; top:0; left: 0 !important;" alt="ACTIONCULTURELLE">
                <div class="row pr-5 pt-5" style="padding-left: 80px">
                    <div class="col-lg-10 col-md-12">
                        <!-- Récupération des datas de l'article -->
                        {{ actu_test.getDatas(locale) }}
                        <!-- Titre -->
                        <h1>{{ actu_test.title }}</h1>
                    </div>
                    <div class="col-lg-2 col-md-12">
                        <!-- Thème -->
                        <div class="text-center h2 white" style="background-color: {{ actu_test.themeBackColor }}; min-height: 50px;"><div class="p-1">ACTION CULTURELLE</div></div>
                    </div>
                </div>
            </div>
            <div class="pr-5 py-5" style="padding-left: 80px">
                <!-- Sous-titre -->
                <p class="h2">{{ actu_test.subtitle }}</p>
                <div class="row position-relative">
                    <div class="col-md-12 col-lg-8">
                        <!-- Contenu -->
                        {{ actu_test.content | raw }}

                        <img src="{{ asset(('build/maquette/images/actu_cadre_2.svg')) }}" class="position-absolute" style="height: 100px; bottom:0; left: 95%;" alt="ACTIONCULTURELLE">
                    </div>
                    <!-- Billetterie -->
                    <div class="col-lg-3 offset-lg-1 col-md-12">
                        <div class="py-5">
                            <p class="fs-1">
                                <b>{% if actu_test.dateEvent|date('D') == 'Mon' %}
                                        LUN.
                                    {% elseif actu_test.dateEvent|date('D') == 'Tue' %}
                                        MAR.
                                    {% elseif actu_test.dateEvent|date('D') == 'Wed' %}
                                        MER.
                                    {% elseif actu_test.dateEvent|date('D') == 'Thu' %}
                                        JEU.
                                    {% elseif actu_test.dateEvent|date('D') == 'Fri' %}
                                        VEN.
                                    {% elseif actu_test.dateEvent|date('D') == 'Sat' %}
                                        SAM.
                                    {% elseif actu_test.dateEvent|date('D') == 'Sun' %}
                                        DIM.
                                    {% endif %}

                                    {{ actu_test.dateEvent| date("j") }}

                                    {% if actu_test.dateEvent|date('M') == 'Jan' %}
                                        JANVIER
                                    {% elseif actu_test.dateEvent|date('M') == 'Feb' %}
                                        FÉVRIER
                                    {% elseif actu_test.dateEvent|date('M') == 'Mar' %}
                                        MARS
                                    {% elseif actu_test.dateEvent|date('M') == 'Apr' %}
                                        AVRIL
                                    {% elseif actu_test.dateEvent|date('M') == 'May' %}
                                        MAI
                                    {% elseif actu_test.dateEvent|date('M') == 'Jun' %}
                                        JUIN
                                    {% elseif actu_test.dateEvent|date('M') == 'Jul' %}
                                        JUILLET
                                    {% elseif actu_test.dateEvent|date('M') == 'Aug' %}
                                        AOÛT
                                    {% elseif actu_test.dateEvent|date('M') == 'Sep' %}
                                        SEPTEMBRE
                                    {% elseif actu_test.dateEvent|date('M') == 'Oct' %}
                                        OCTOBRE
                                    {% elseif actu_test.dateEvent|date('M') == 'Nov' %}
                                        NOVEMBRE
                                    {% elseif actu_test.dateEvent|date('M') == 'Dec' %}
                                        DÉCEMBRE
                                    {% endif %}
                                    {{ actu_test.dateEvent| date("Y") }}


                                </b>
                            </p>
                            <p>{{ actu_test.datetimeEvent| date("H:i") }}</p>
                        </div>
                        <div class="row mb-5">
                            <div class="col-6 fs-4">
                                Tarif normal
                            </div>
                            <div class="col-6 fs-4">
                                Tarif abonné
                            </div>
                            <div class="col-3 h-100" style="padding-right: 0px; ">
                                <div class="border border-1 border-dark p-2 w-100" style="background-color: #e6e6e6">0 €</div>
                            </div>
                            <div class="col-3" style="padding-left: 0px">
                                <select class="w-100 p-1">
                                    <option>0</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                </select>
                            </div>
                            <div class="col-3" style="padding-right: 0px; ">
                                <div class="border border-1 border-dark p-2 w-100" style="background-color: #e6e6e6">0 €</div>
                            </div>
                            <div class="col-3" style="padding-left: 0px">
                                <select class="w-100 p-1">
                                    <option>0</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                </select>
                            </div>
                        </div>
                        <button class="border rounded-0 btn border-dark fs-2"><div class="p-1">AJOUTER AU PANIER</div></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% set counter = 0 %}
    {% for actu in actu_childs %}
        {% if actu.category.title|upper == "ACTION CULTURELLE" and actu.title|upper != actu_test.title|upper %}
            {% set counter = counter + 1 %}
        {% endif %}
    {% endfor %}

    {% if counter>1 %}
    <!-- Voir aussi -->

    <div class="bg-grey">
        <div class="p-5">
            {% dump(counter) %}
            <h1 class="pb-5">Voir aussi >> >> >></h1>
            <div class="row">

                {% for actu in actu_childs %}
                        {% if actu.category.title|upper == "ACTION CULTURELLE" and actu.title|upper != actu_test.title|upper %}

                    <!-- Récupération des datas de l'article -->
                            {{ actu.getDatas(locale) }}

                            {% set media = actu.getMedia(2) %}
                            <div class="col-lg-4 col-md-12 py-2">
                                <!-- Card-Actu -->
                                <div class="card mb-3 mx-4 shadow-lg rounded-0 h-100">

                                    {% if media is not null %}
                                        {% set url = '/assets/images/' ~ media.media %}
                                        <img src="{{ asset((url)) }}" class="card-img-top rounded-0" alt="...">
                                    {% endif %}

                                    <div class="row m-0">
                                        <!-- Themes -->
                                        <div class="col-5 theme-1"  style="background-color: {{ actu.themeBackColor }};color: {{ actu.themeTextColor }};">
                                            ACTION CULTURELLE
                                        </div>
                                    </div>
                                    <div class="p-5">
                                        <div class=" pb-5">
                                            <!-- Titre -->
                                            <h2 class="card-title pb-3">{{ actu.title }}</h2>
                                            <!-- Contenu -->
                                            <div class="card-text card-actu-text">{{ actu.content | raw }}</div>
                                        </div>
                                        <!-- Bouton Lien vers l'article -->
                                        <button class="btn-read-card">LIRE LA SUITE</button>
                                    </div>
                                    <!-- Potentiel lien Billetterie -->
                                </div>
                            </div>
                        {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}