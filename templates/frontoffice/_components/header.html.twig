{% block stylesheet %}

    <style>
        .offcanvas {
            border: none !important;
        }

        .offcanvas.offcanvas-end {
            top:20%;
            background:transparent;
            right: -15px;
            width: 450px;
        }
        .nav-link {
            color: black;
            font-size: 20px;
            font-weight: bold;
        }
        .round-left {
            border-top-left-radius: 30px;
            border-bottom-left-radius: 30px;
            padding-left: 15px;
            background-color: #FFFFFF;
            color: black;
            border: 1px solid black;
        }
        .btn-move-up {
            margin-top: -10px; /* Ajustez cette valeur selon le déplacement souhaité */
        }
    </style>

{% endblock %}
<!-- HEADER LG -->
