                                <img src="{{ asset('build/maquette/images/separator.png') }}">
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>


<!-- HEADER MD/SM -->

<div class="d-lg-none">
    <div class="row">
        <div class="col-3">
            <a href="{{ path('ma_home') }}">
                <img src="{{ asset('build/maquette/images/LOGO_ACTUEL.png') }}">
            </a>
        </div>
        <div class="col-9">
            <div class="row">
