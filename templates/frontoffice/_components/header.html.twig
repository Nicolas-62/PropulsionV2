<!-- HEADER LG -->
<div class="d-md-none d-sm-none p-0 m-0 d-lg-block">
    <div class="row">
        <div class="col-3">
            <a href="{{ path('fo_home_index') }}">
                <img class="img-fluid" src="{{ asset('build/maquette/images/LOGO_ACTUEL.png') }}">
            </a>
        </div>
        <div class="col-9 d-block flex-column align-items-start p-0">
            <nav class="navbar navbar-expand-lg col-12 mt-auto">
                <ul class="navbar-nav w-100 justify-content-end pt-3">

                    {% for event_header in events_header %}
                        {% set media = event_header.getMedia(12) %}

                        {% if loop.index < 5 %}
                            <li class="nav-item">
                                <a class="text-decoration-none" href="/agenda/{{ event_header.category.id }}/{{ event_header.title }}">

                                    {% if media is not null %}
                                        {% set url = '/assets/images/' ~ media.media %}
                                        <img src="{{ asset((url)) }}" class="rounded-circle round-img-header" style="z-index:{{ 1000 -  loop.index }} !important;" alt="...">
                                    {% else  %}
                                        <img src="{{ asset(('build/front/images/PLACEHOLDER_CARD_SQUARE.png')) }}" class="rounded-circle round-img-header z-{{ 5 - loop.index}} " style="{% if loop.index == 4 %}margin-right:10px{% endif %}" alt="...">
                                    {% endif %}
                                    {% if loop.index < 4 %}
                                        <div class="text-center ml-40">{{ event_header.title }}</div>
                                        <div class="text-center ml-40">{{ event_header.dateEvent | date('d/m') }}</div>
                                    {% else %}
                                        <div class="text-center" style="margin-right: 10px">{{ event_header.title }}</div>
                                        <div class="text-center" style="margin-right: 10px">{{ event_header.dateEvent | date('d/m') }}</div>
                                    {% endif %}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}



                    {% for src in btns %}
                        {% set url = 'build/maquette/images/' %}
                        {% set ext = '.png' %}
                        {% set src = url ~ src ~ ext %}
                        <li><img src="{{ asset(src) }}"></li>
                    {% endfor %}
                </ul>
            </nav>
            <!-- NAV BAR LG -->
            <nav class="d-none d-lg-flex block navbar-expand-lg col-12 mb-auto">
                <div class="row">
                    <ul class="navbar-nav w-100 justify-content-between nav-md-sm">
                        {% for name, url in menu %}
                            <li style="margin-left: 20px;margin-right: 20px"><strong><a class="text-decoration-none black title-nav-lg"  href="{{ path(url) }}">{{ name|upper }}</a></strong></li>
                            {% if loop.index0 < 4 %}
                                <img class="nav-separator" src="{{ asset('build/maquette/images/separator.png') }}">
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>


