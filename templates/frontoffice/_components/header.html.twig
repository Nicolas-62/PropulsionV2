                    <ul class="navbar-nav w-100 justify-content-between nav-md-sm">
                        {% for name, url in menu %}
                            <li style="margin-left: 20px;margin-right: 20px"><strong><a class="text-decoration-none black" style="font-size:32px" href="{{ path(url) }}">{{ name|upper }}</a></strong></li>
