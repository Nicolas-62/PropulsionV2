    <div class="row">
        <div class="col-3">
            <a href="{{ path('fo_home_index') }}">
                <img class="img-fluid" src="{{ asset('build/maquette/images/LOGO_ACTUEL.png') }}">
            </a>
        </div>
        <div class="col-9 d-block flex-column align-items-start p-0">
            <nav class="navbar navbar-expand-lg col-12 mt-auto">
                <ul class="navbar-nav w-100 justify-content-end">

                    <a class="text-decoration-none" href="/agenda/12/goldman"><img src="/assets/images/november-ultra-ref-7772-copiedxo-1693822366.png" class="rounded-circle round-img-header" style="z-index:4;" alt="..."></a>
                    <a class="text-decoration-none" href="/agenda/12/goldman"><img src="/assets/images/november-ultra-ref-7772-copiedxo-1693822366.png" class="rounded-circle round-img-header" style="z-index:3;" alt="..."></a>
                    <a class="text-decoration-none" href="/agenda/12/goldman"><img src="/assets/images/november-ultra-ref-7772-copiedxo-1693822366.png" class="rounded-circle round-img-header" style="z-index:2;" alt="..."></a>
                    <a class="text-decoration-none" href="/agenda/12/goldman"><img src="/assets/images/november-ultra-ref-7772-copiedxo-1693822366.png" class="rounded-circle round-img-header" style="z-index:1; margin-right: 10px" alt="..."></a>



                    {% for src in btns %}
                        {% set url = 'build/maquette/images/' %}
                        {% set ext = '.png' %}
                        {% set src = url ~ src ~ ext %}
                        <li><img src="{{ asset(src) }}"></li>
                    {% endfor %}
                </ul>
            </nav>
            <!-- NAV BAR LG -->
            <nav class="d-none d-lg-flex block navbar-expand-lg col-12 mb-auto">
