{% endblock %}

<div class="bg-footer pt-5 px-0" style="overflow: hidden">


    <!-- LOGOS -->
    <div class="row pb-5">
        <div class="col-md-12 col-lg-10">
            <img class="img-fluid logo-footer" src="{{ asset('build/maquette/images/FOOTER_LUNE.png') }}">
        </div>
        <div class="d-none d-lg-block col-lg-2">
            <img class="img-fluid" style="max-width: 115px" src="{{ asset('build/maquette/images/FOOTER_LOGO.png') }}">
        </div>
    </div>

    <!-- BOUTONS FOOTER -->
    <div class="row text-white px-2">
        {% for icone in icones %}
            <div class="col-sm ">
                <div class="row">
                    <div class="col-12 {% if loop.index0 != 0 %}border-dotted-white{% endif%} {% if loop.index0 == 2 %}border-dotted-right-white{% endif%} text-center">
                        {% if loop.index0 == 0 %}
                            <a class="text-decoration-none" style="color: white !important" href="{{ path('fo_infos_contact') }}">
                        {% elseif loop.index0 == 1 %}
                            <a class="text-decoration-none" style="color: white !important" href="{{ path('fo_contact_contact') }}">
                        {% elseif loop.index0 == 2 %}
                            <a class="text-decoration-none" style="color: white !important" href="https://billetterie.lalune.net/identification">
                        {% endif %}
                        <img class="col-12 img-fluid" style="max-height: 70px; max-width: 70px" src="{{ asset(getSiteImagePath(icone)) }}">
                            <div class="mt-3 mb-4 mb-lg-0">
                                {% if loop.index0 == 0 %}
                                <b>SCÈNE <br>
                                    DE MUSIQUES <br> ACTUELLES </b><br> 17 Quai Bélu <br> 80000 Amiens
                                {% elseif loop.index0 == 1 %}
                                    NOUS CONTACTER
                                {% else %}
                                    VOS COMMANDES
                                {% endif %}
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="col-sm  ">
            <div class="row">
                <div class="col-12 text-center mb-4 mb-lg-0"  id="btn-modal">
                            <img class="" style="max-height: 60px;cursor: pointer" src="{{ asset(getSiteImagePath('FOOTER_ENVELOPPE.svg')) }}">
                    <form style="cursor: pointer">
                        <div class="row mt-3">
                            <div  class="text-center">
                                NEWSLETTER
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- MEDIAS SOCIAUX -->
    <div class="row">
        {% for src, link in medias %}
            {% set url = 'build/maquette/images/' %}
            {% set ext = '.png' %}
            {% set src = url ~ src ~ ext %}
            <div class=" text-center  col {% if loop.index0 == 0 %}{% endif %}">
                <a href="{{ link }}">
                    <img class="img-fluid" style="min-width: 30px; max-height: 60px" src="{{ asset(src) }}">
                </a>
            </div>
        {% endfor %}
    </div>
</div>


<!-- PARTENAIRES ET SPONSORS -->
<div class="pt-5 bg-grey px-0 mx-0">
    <div class="row row-cols-5 px-0 mx-0">
        {% for sponsor_img in sponsors_img %}
            {% set media_footer = sponsor_img.getMedia(11) %}
            <div class="col mb-2 text-center">
                {% if media_footer is not null %}
                    {% set url = '/assets/images/' ~ media_footer.media %}
                    <img src="{{ asset((url)) }}" class="card-img-top rounded-0" style="max-height: 100px; max-width: 163px" alt="...">
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>


<!-- MENTIONS LEGALES -->
<div class="bg-grey row pt-5 px-0 mx-0">
    <!-- LG / XL -->
    <div class="d-lg-flex d-none justify-content-center mb-5">
        {% for name, url in mentions %}
            {% if loop.index0 > 0 %} | {% endif %}
            <div class="mx-4">
                <a  class="text-decoration-none black" href="{{ url }}">{{ name }}</a>
            </div>
        {% endfor %}
    </div>

    <div class="d-md-flex d-lg-none d-xl-none justify-content-center mb-5">
        <div class="row">
            <div class="col-12 lh-1">
                <div class="row mx-4 text-center">
                    {% for name, url in mentions %}
                        {% if loop.index0 < 3 %}

                            {% if loop.index0 > 0 %} | {% endif %}
                            <div class="px-2 col" >
                                <a  class="text-decoration-none black" style="font-size: 16px "  href="{{ url }}">{{ name }}</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="row mx-4 text-center pt-3">
                    {% for name, url in mentions %}
                        {% if loop.index0 > 2  %}

                            {% if loop.index0 > 3 %} | {% endif %}
                            <div class="px-2 col" >
                                <a  class="text-decoration-none black" style="font-size: 16px "  href="{{ url }}">{{ name }}</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

