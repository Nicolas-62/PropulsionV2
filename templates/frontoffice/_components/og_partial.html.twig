<meta property="og:locale" content="fr_FR">
{% if openGraph.title is defined %}
    {% if openGraph.title is not null and openGraph.title is not empty %}
        <meta property="og:title" content="{{ openGraph.title }}">
        <meta name="twitter:title" content="{{ openGraph.title }}">
    {% endif %}
{% endif %}

<meta property="og:url" content="{{ app.request.uri }}">
<meta property="twitter:url" content="{{ app.request.uri }}">
{% set domain = app.request.getSchemeAndHttpHost() ~ app.request.getRequestUri() %}
{% set parts = domain|split('/') %}
<meta property="twitter:domain" content="{{ parts[2] }}">


{% if openGraph.image is defined %}
    {% if openGraph.image is not null and openGraph.image is not empty %}
        <meta property="og:image" content="{{ openGraph.image }}">
        <meta name="twitter:image" content="{{ openGraph.image }}">

    {% endif %}
{% endif %}

{% if openGraph.imageWidth is defined %}
    {% if openGraph.imageWidth is not null and openGraph.imageWidth is not empty %}
        <meta property="og:image:width" content="{{ openGraph.imageWidth }}">
    {% endif %}
{% endif %}

{% if openGraph.imageHeight is defined %}
    {% if openGraph.imageHeight is not null and openGraph.imageHeight is not empty %}
        <meta property="og:image:height" content="{{ openGraph.imageHeight }}">
    {% endif %}
{% endif %}
{% if openGraph.imageType is defined %}
    {% if openGraph.imageType is not null and openGraph.imageType is not empty %}
        <meta property="og:image:type" content="{{ openGraph.imageType }}">
    {% endif %}
{% endif %}

{% if openGraph.description is defined %}
    {% if openGraph.description is not null and openGraph.description is not empty %}
        <meta property="og:description" content="{{ openGraph.description }}">
        <meta name="twitter:description" content="{{ openGraph.description }}">
    {% endif %}
{% endif %}

{% if openGraph.siteName is defined %}
    {% if openGraph.siteName is not null and openGraph.siteName is not empty %}
        <meta property="og:site_name" content="{{ openGraph.siteName }}">
    {% endif %}
{% endif %}

{% if openGraph.type is defined %}
    {% if openGraph.type is not null and openGraph.type is not empty %}
        <meta property="og:type" content="{{ openGraph.type }}">
    {% endif %}
{% endif %}