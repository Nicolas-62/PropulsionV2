{# frontoffice/_components/layout.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {% block meta_robots %}
            <meta name="robots" content="noindex, nofollow">
        {% endblock %}
        {% block meta_og %}
            {{ include(fo_path ~ '_components/og_partial.html.twig') }}
        {% endblock %}
        <meta name="robots" content="noindex, nofollow">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{ seo.title|capitalize }} - {{ site }}{% endblock %}</title>
        <meta name="description" content="{% block description %}{{ seo.description }}{% endblock %}">
        <meta name="keywords" content="{% block keywords %}{{ seo.keywords|join(', ') }}{% endblock %}">
        <link rel="icon" type="image/png" href="{{ asset(getSiteImagePath('favicon.ico')) }}" />
{#        <!-- Styles -->#}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('build/fo_main_css.css') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Akshar:wght@300;400;600&family=Roboto:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
        {#        <!-- Scripts -->#}
        {#        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.0/dist/jquery.slim.min.js"></script>#}
        {#        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>#}
        {#        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>#}
        {% block stylesheets %}
            {{ include(fo_path ~ '_components/styles.html.twig') }}
        {% endblock %}

    </head>


    {%  block header %}
        {%  if header_partial is defined and header_partial != '' %}
            <header>
                {{ include(fo_path ~ header_partial) }}
            </header>
        {% endif %}
    {%  endblock %}
    <body>
        <!-- Breadcrumb -->
        <div class="container-fluid">
            {{  include(fo_path ~ '_components/breadcrumb.html.twig') }}
        </div>
        <!-- Flash messages -->
        <div class="container-fluid flash">
            {{ include(fo_path ~ '_components/flash.html.twig') }}
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ include(fo_path ~ '_components/scripts.html.twig') }}
        {% endblock %}
    </body>
    {%  block footer %}
        {%  if footer_partial is defined and footer_partial != '' %}
            <footer>
                <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>
                <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
                {{ include(fo_path ~ footer_partial) }}
            </footer>
        {% endif %}
    {%  endblock %}
</html>
