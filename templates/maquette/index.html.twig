{% extends 'maquette/layout.html.twig' %}

{% block stylesheets %}
    <style>
        .card-title {
            font-size: 40px !important;
            font-weight: bold !important;
        }

        .card-date {
            font-size: 35px !important;
            font-weight: bold !important;
        }

        .card-subtitle {
            font-size: 30px !important;
            font-weight: normal;
        }

        .card-hour {
            font-size: 30px !important;
        }

        .date {
            font-size: 35px !important;
            font-weight: bold !important;
        }

        .hour {
            font-size: 30px !important;
        }

        @media (max-width: 991px) {
            .card-container {
                padding : 30px 160px 30px 160px !important;
            }
        }

        @media (min-width: 992px) {
            .card-container {
                padding : 20px 40px 20px 40px !important;
            }
        }

        .card-ticketing {
            width: 30px;
            padding-right: 5px;
        }
    </style>
{% endblock %}


{% block body %}
    <!-- Image Vedette LG -->
    {% for event in events_agenda.elements %}

        {{  event.element.getDatas(locale) }}
        {% if loop.index0 == 3  %}
            <div class="container-fluid px-0">
                <div class="row">
                    <div class="col-12 px-0 mx-0">
                        <div style="position: relative">
                            <img class="w-100" src="{{ asset('build/maquette/images/GISCARD.svg') }}">
                            <div class="position-absolute d-none d-lg-block" style="right: 0; top:25%; width: 25%; background-color: white">
                                <div class="row mx-0">
                                    <div
                                        class="col-5 white theme-1 text-uppercase"
                                        style="background-color: {{ event.element.themeBackColor }};color: {{ event.element.themeTextColor }};"
                                    >
                                        {% set themes = event.element.themes %}
                                        {% for theme in themes %}
                                            {{ theme.name }}
                                        {% endfor %}
                                    </div>
                                    <div class="col-7 theme-2"  style="background-color: {{ event.element.styleBackColor }};color: {{ event.element.styleTextColor }};">
                                        <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.element.style }}
                                    </div>
                                </div>
                                <div class="card-body card-container" style="line-height: 1.1">
                                    <div class="py-3">
                                        <div class="card-title text-uppercase"><b>{{ event.element.title }}</b></div>
                                        <div class="card-subtitle text-uppercase">{{ event.element.subtitle }}</div>
                                    </div>
                                    <div class="row pt-4">
                                        <div class="col-8" style="line-height: 1">
                                            <div class="card-date"><b>{{ event.element.dateEvent }}</b></div>
                                            <div class="card-hour">{{ event.element.datetimeEvent }}</div>
                                        </div>
                                        <div class="col-4 d-flex align-items-end">
                                            <img class="img-fluid" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Artiste Vedette MD/SM -->
            <div class="card shadow-lg rounded-0 h-100 d-sm-block d-md-block d-lg-none  ">
                <!-- Themes -->
                <div class="row mx-0 px-0">
                        <div
                            class="col-3 theme-1 text-uppercase"
                            style="
                                {% if event.element.themeBackColor != "" %}
                                        background-color: {{ event.element.themeBackColor }};
                                {% else %}
                                        background-color: #fa5faa;
                                {% endif %}
                                {% if event.element.themeTextColor != "" %}
                                    color: {{ event.element.themeTextColor }};
                                {% else %}
                                    color: white;
                                {% endif %}"
                        >
                            {% set themes = event.element.themes %}
                            {% for theme in themes %}
                                {{ theme.name }}
                            {% endfor %}
                        </div>
                        <div class="col-9 theme-2"  style="

                            {% if event.element.themeBackColor != "" %}
                                    background-color: {{ event.element.styleBackColor }};
                            {% else %}
                                    background-color: black;
                            {% endif %}
                                                            {% if event.element.themeTextColor != "" %}
                                    color: {{ event.element.styleTextColor }};
                            {% else %}
                                    color: white;
                            {% endif %}"
                        >
                            <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.element.style }}
                        </div>
                </div>

                <div class="card-container" style="line-height: 1.1">
                    <div class="py-3">
                    <!-- ARTISTES -->
                        <div class="card-title text-uppercase" style="font-size: 34px; font-weight: bold">{{ event.element.title }}</div>
                        <div class="card-subtitle text-uppercase">{{ event.element.subtitle }}</div>
                    </div>
                        <!-- DATE CONCERT ET HEURE -->
                    <div class="row pt-4">
                        <div class="col-9" style="line-height: 1">
                            <div class="card-date">{{ event.element.dateEvent }}</div>
                            <div class="card-hour">{{ event.element.datetimeEvent }}</div>
                        </div>
                        <div class="col-2 offset-1">
                            <a href="https://billetterie.lalune.net/">
                                <img class="img-fluid" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}

    <!-- Programmation à venir -->
    <div class="p-lg-5">
        <div class="row">
            <div class="d-none d-lg-block d-xl-block">
                <h1 class="pb-5">Programmation <b>à venir</b></h1>
            </div>
            {% for event in events_agenda.elements %}
                {% if loop.index0 < 3 %}
                    <div class="col-lg-4 col-md-12 px-0">
                        <!-- Card-Actu -->
                        <div class="card mb-3  mx-lg-3 shadow-lg rounded-0 h-100 ">

                        {% if loop.index0 == 0 %}
                            <img src="{{ asset(('build/maquette/images/GWENDOLINE.png')) }}" class="card-img-top rounded-0" alt="...">
                        {% elseif loop.index0 == 1 %}
                            <img src="{{ asset(('build/maquette/images/MALN.png')) }}" class="card-img-top rounded-0" alt="...">
                        {% elseif loop.index0 == 2 %}
                            <img src="{{ asset(('build/maquette/images/SILLYBOYBLUE.png')) }}" class="card-img-top rounded-0" alt="...">
                        {% endif %}
                            <!-- Themes -->
                            <div class="row mx-0 px-0">
                                <div
                                    class="col-3 theme-1 text-uppercase"
                                    style="background-color: {{ event.element.themeBackColor }};color: {{ event.element.themeTextColor }};"
                                >
                                    {% set themes = event.element.themes %}
                                    {% for theme in themes %}
                                        {{ theme.name }}
                                    {% endfor %}
                                </div>
                                <div class="col-9 white theme-2 justify-content-start" style="background-color: {{ event.element.styleBackColor }};color: {{ event.element.styleTextColor }};">
                                    <img class="card-ticketing" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">{{ event.element.style }}
                                </div>
                            </div>
                            <div class="card-container" style="line-height: 1.1">
                                <div class="py-3">
                                    <!-- ARTISTES -->
                                    <div class="card-title text-uppercase">{{ event.element.title }}</div>
                                    <div class="card-subtitle text-uppercase">{{ event.element.subtitle }}</div>
                                </div>
                                <!-- DATE CONCERT ET HEURE -->
                                <div class="row pt-4">
                                    <div class="col-9" style="line-height: 1">
                                        <div class="card-date">{{ event.element.dateEvent }}</div>
                                        <div class="card-hour">{{ event.element.datetimeEvent }}</div>
                                    </div>
                                    <div class="col-2 offset-1">
                                        <a href="https://billetterie.lalune.net/">
                                            <img class="img-fluid" src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>


    <!-- Event / Playlistes -->
    <div class="px-5 py-5">


        <div class="row">

            <!-- Event -->
            <div class="col-md-12 col-lg-8">
                <div class="py-5 px-5">

                    <h1 class="d-sm-block d-md-block d-lg-none">ÉVÈNEMENTS/ACTUALITÉS</h1>
                    <div class="row">
                        {% for event in events_actus.elements %}
                        <div class="col-lg-6 col-md-12 border mb-md-3 mb-lg-0 mb-sm-3 px-0">
                            {% if loop.index0 == 3  %}
                                <img class="img-fluid w-100" src="{{ asset(('build/maquette/images/ACTIONCULTURELLE.png')) }}">
                            {% endif %}
                            <div class="py-5 px-5">
                                <!-- RECUPERATION DES DATAS -->
                                {{  event.element.getDatas(locale) }}
                                <!-- TITRE -->
                                <h2 class="mb-4">{{ event.element.title }}</h2>
                                <!-- CONTENU -->
                                <div class="fs-3">{{ event.element.description | raw}}</div>
                                <!-- DATE ET HEURE -->
                                <div style="line-height: 1">
                                    <div class="date">{{ event.element.dateEvent }}</div>
                                    <div class="hour">{{ event.element.datetimeEvent }}</div>
                                </div>
                                <button class="btn border rounded-0 border-dark mt-5">LIRE LA SUITE</button>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Playlists -->
            <div class="col-md-12 col-lg-4">
                <div class="px-5 py-5">
                    <div class="row">
                        <div class="col-12 py-3">
                            <a href="http://www.lalune.net/concert-amiens/bruits-de-lune/">
                                <img class="w-100" src="{{ asset('build/maquette/images/BRUITS_LUNE.png') }}">
                            </a>
                        </div>
                        <div class="col-12 py-3">
                            <a href="https://open.spotify.com/user/lalunedespirates">
                                <img class="w-100" src="{{ asset('build/maquette/images/LUNE_SPOTIFY.svg') }}">
                            </a>
                        </div>
                        <div class="col-12 py-3">
                            <p class="h1"> Playlist</p>
                            <a href="https://open.spotify.com/user/lalunedespirates">
                                <img class="w-100" src="{{ asset('build/maquette/images/SPOTIFY.svg') }}">
                            </a>
                            <p class="h2">
                                Abonnez-vous à notre playlist
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TEST CAROUSEL -->
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="p-5">
                    <div class="card mb-3  mx-lg-3 shadow-lg rounded-0 h-100 ">

                        <img src="{{ asset(('build/maquette/images/SILLYBOYBLUE.png')) }}" class="card-img-top rounded-0" alt="...">
                    <div class=" ">
                        <!-- Themes -->
                        <div class="row mx-0 px-0">
                                <div class="col-3 white"  style="background-color: #fa5faa; min-height: 50px; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 22px">
                                    CONCERT
                                </div>
                                <div class="col-9 white justify-content-start"  style="background-color: black; min-height: 50px; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 22px">
                                    <img class="" style="width: 30px; padding-right: 5px;" src="{{ asset(('build/maquette/images/MINI_BILLETTERIE.svg')) }}">SHLAG WAVE SOMBRE | INDIE POST-PUNK
                                </div>
                        </div>

                        <div class="card-container">
                            <!-- ARTISTE -->

                            <h5 class="card-title my-3" style="font-size: 34px; font-weight: bold">GWENDOLINE</h5>

                            <!-- seconde partie -->
                            <p class="card-text">

                            </p>


                            <div class="row">
                                <!-- DATE CONCERT ET HEURE -->
                                <div class="col-9 d-flex align-content-end">

                                        <div class="d-flex align-items-end" style="min-height: 250px">
                                            <div>
                                                <p style="font-size: 29px;font-weight: bold">MER. 17 MAI 2023</p>
                                                <div class="d-inline-flex ">

                                                    <p style="font-size: 31px;font-weight: bold">20:30</p>
                                                    <a href="https://billetterie.lalune.net/">
                                                        <img src="{{ asset(('build/maquette/images/BILLETTERIE.png')) }}" class="card-img-top rounded-0" alt="...">
                                                    </a>
                                                </div>

                                            </div>
                                        </div>

                                </div>

                                <!-- Potentiel lien Billetterie -->
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('build/maquette/images/GWENDOLINE.png') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('build/maquette/images/KULTUR.png') }}" class="d-block w-100" alt="...">

            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
{% endblock %}