<div class="bg-footer">


    <!-- LOGOS -->
    <div class="row pt-5">
        <div class="col-8">
            <img class="" src="{{ asset('build/assets/maquette/images/FOOTER_LUNE.png') }}">
        </div>
        <div class="col-4">
            <img class="" src="{{ asset('build/assets/maquette/images/FOOTER_LOGO.png') }}">
        </div>
    </div>




    <!-- BOUTONS FOOTER -->
    <div class="row">
        <nav class="navbar navbar-expand-lg col-12 mb-auto">
            <ul class="navbar-nav w-100 justify-content-between">
                {% for src in btns_footer %}
                    {% set url = 'assets/maquette/' %}
                    {% set ext = '.png' %}
                    {% set src = url ~ src ~ ext %}
                    <li>
                        <img class="" src="{{ asset(src) }}">
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>


    <!-- MEDIAS SOCIAUX -->
    <div class="row">
        <div class="col-5">
        </div>
        <div class="col-2">
            <nav class="navbar navbar-expand-lg col-12 pb-0">
                <ul class="navbar-nav w-100 justify-content-between">
                    {% for src, link in medias %}
                        {% set url = 'assets/maquette/' %}
                        {% set ext = '.png' %}
                        {% set src = url ~ src ~ ext %}
                        <li>
                            <a href="{{ link }}">
                                <img src="{{ asset(src) }}">
                            </a>
                        </li>
                    {% endfor %}

                </ul>
            </nav>
        </div>
        <div class="col-5">
        </div>
    </div>
</div>


    <!-- PARTENAIRES ET SPONSORS -->
<div class="pt-5 bg-grey">
    <div class="container">
        <img class="w-100" src="{{ asset('build/assets/maquette/images/FOOTER_SPONSORS.png') }}">
    </div>
</div>


    <!-- MENTIONS LEGALES -->
<div class="bg-grey">
    <nav class="navbar navbar-expand-lg col-10 offset-1 mb-auto ml-5 mr-5">
        <ul class="navbar-nav w-100 justify-content-between">
        {% for name, url in mentions %}
            <li>
                <a  class="text-decoration-none black" href="{{ url }}">{{ name }}</a>
            </li>
        {% endfor %}
        </ul>
    </nav>
</div>