<!-- HEADER LG -->
<div class="d-md-none d-sm-none d-lg-flex">
    <div class="row">
        <div class="col-3">
            <a href="{{ path('ma_maquette') }}">
                <img src="{{ asset('build/assets/maquette/images/LOGO_ACTUEL.png') }}">
            </a>
        </div>
        <div class="col-9 d-flex flex-column align-items-start">
            <nav class="navbar navbar-expand-lg col-12 mt-auto">
                <ul class="navbar-nav w-100 justify-content-end">
                    <li><img src="{{ asset('build/assets/maquette/images/artistes_header.png') }}"></li></li>
                    {% for src in btns %}
                        {% set url = 'assets/maquette/' %}
                        {% set ext = '.png' %}
                        {% set src = url ~ src ~ ext %}
                        <li><img src="{{ asset(src) }}"></li>
                    {% endfor %}
                </ul>
            </nav>
            <!-- NAV BAR LG -->
            <nav class="d-none d-lg-flex navbar navbar-expand-lg col-12 mb-auto">
                <div class="row">
                <ul class="navbar-nav w-100 justify-content-between">
                    {% for name, url in data %}
                        <li style="margin-left: 20px;margin-right: 20px"><strong><a class="text-decoration-none black" style="font-size:37px" href="{{ path(url) }}">{{ name|upper }}</a></strong></li>
                        {% if loop.index0 < 4 %}
                            <img src="{{ asset('build/assets/maquette/images/separator.png') }}">
                        {% endif %}
                    {% endfor %}
                </ul>
                </div>
            </nav>
        </div>
    </div>
</div>


