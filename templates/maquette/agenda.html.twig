{% extends 'maquette/layout.html.twig' %}
{% block body %}

    <div class="px-5 py-5 row">
        <h1 class="col-2" style="color: #08afff">{{ page_title | upper }}</h1>
        <select class="col-2 rounded-0"style="font-weight: bold" aria-label="Default select example">
            <option selected>TOUS LES EVENEMENTS</option>

            {% for event in events_agenda.elements %}
                <option value={{ event.element.title }}>{{ event.element.title }}</option>
            {% endfor %}
        </select>
    </div>

    <div style="">
        <div class="py-5 px-5">
            <div class="row my-5">

                {% for event in events_agenda.elements %}
                    <div class="col-4">
                        <!-- Card-Actu -->
                        <div class="card mb-3 mx-4 shadow-lg rounded-0">
                            <img src="{{ asset(('assets/maquette/media-actu.png')) }}" class="card-img-top rounded-0" alt="...">
                            <div class="card-body pt-0 ">
                                <!-- Themes -->
                                <div class="row">
                                    {% for theme in event.element.themes %}
                                        <div class="col-6" style="background-color: #eab308; color: white">
                                            {{ theme.name | upper}}
                                        </div>
                                    {% endfor %}
                                </div>
                                <!-- ARTISTE -->

                                    <h5 class="card-title my-3">{{ event.element.title }}</h5>

                                <!-- seconde partie -->
                                <p class="card-text">

                                </p>

                            </div>

                            <div class="container">
                                <div class="row">
                                    <!-- DATE CONCERT ET HEURE -->
                                    <div class="col-9">
                                        <p>DATE</p>
                                        <p>HEURE</p>
                                    </div>

                                    <!-- Potentiel lien Billetterie -->
                                    <div class="col-3">
                                        <a href="https://billetterie.lalune.net/">
                                            <img src="{{ asset(('assets/maquette/BILLETTERIE.png')) }}" class="card-img-top rounded-0" alt="...">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}


                <!-- EXEMPLE CONCERT ANNULE -->
                <div class="col-4">
                    <!-- Card-Actu -->
                    <div style="background-color: rgba(255, 0, 0, 0.5);">
                        <div class="card mb-3 mx-4 shadow-lg rounded-0">
                            <img src="{{ asset(('assets/maquette/media-actu.png')) }}" class="card-img-top rounded-0" alt="...">
                            <div class="card-body pt-0 ">
                                <!-- Themes -->
                                <div class="row">
                                        <div class="col-6" style="background-color: #eab308; color: white">
                                            CONCERT
                                        </div>
                                </div>
                                <!-- ARTISTE -->

                                <h5 class="card-title my-3">CONCERT EXEMPLE</h5>

                                <!-- seconde partie -->
                                <p class="card-text">

                                </p>

                            </div>

                            <div class="container">
                                <div class="row">
                                    <!-- DATE CONCERT ET HEURE -->
                                    <div class="col-9">
                                        <p>DATE</p>
                                        <p>HEURE</p>
                                    </div>

                                    <!-- Potentiel lien Billetterie -->
                                    <div class="col-3">
                                        <a href="https://billetterie.lalune.net/">
                                            <img src="{{ asset(('assets/maquette/BILLETTERIE.png')) }}" class="card-img-top rounded-0" alt="...">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}