<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Styles -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.0/dist/jquery.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('frontoffice') }}
        {% endblock %}
    </head>
    <header>
        {{ include('_components/header.html.twig') }}
    </header>


    <body>
        <!-- Breadcrumb -->
        <div class="container-fluid">
            {{  include('_components/breadcrumb.html.twig') }}
        </div>
        <!-- Flash messages -->
        <div class="container-fluid flash">
            {{ include('_components/flash.html.twig') }}
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('frontoffice') }}

            <!-- Renders frontoffice.js & a webpack runtime.js file
                <script src="/build/runtime.js" defer></script>
                <script src="/build/frontoffice.js" defer></script>
                See note below about the "defer" attribute -->
        {% endblock %}
    </body>
    <footer>{{ include('_components/footer.html.twig', ignore_missing = true) }}</footer>
</html>
